{
  "manifest_version": 3,
  "name": "Translate Extension",
  "version": "1.0",
  "description": "Translate text on button click",
  "permissions": ["activeTab"],

  "action": {
    "default_popup": "popup.html"
  },

  "background": {
    "service_worker": "background.js"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
